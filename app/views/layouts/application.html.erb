<!DOCTYPE html>
<html>
  <head>
    <title>CodecoreQuiz2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Idea Factory</a>
      <div class="collapse navbar-collapse" id="navbarNav">
       
        <div class="container">
        </div>
        <ul class="navbar-nav">
          <% if current_user.present? %>
          <h6 class="name-heading">Hello <%= current_user.first_name %>!</h6>

            <li class="nav-item">
              <%= link_to "Sign Out", sessions_path, method: :delete %>
            </li>

            <ul class="navbar-nav">
            <form method="get" action="/ideas/new"><button type="submit" style="border:1px solid black; background-color: transparent;">New Idea</button></form>
            <li class="nav-item">
              <a class="nav-link" href="/ideas">Ideas</a>
            </li>
          </ul>
          
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_sessions_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
